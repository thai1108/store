{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended"],
  "env": {
    "node": true,
    "es6": true
  },
  "globals": {
    "D1Database": "readonly",
    "KVNamespace": "readonly", 
    "R2Bucket": "readonly",
    "Request": "readonly",
    "Response": "readonly",
    "ExecutionContext": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "no-console": "off",
    "eqeqeq": "error",
    "curly": "error",
    "no-var": "error",
    "prefer-const": "error"
  }
}